rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /fcm_tokens/{token} {
      allow create, update, read, write: if true;
    }
    match /user_preferences/{fcmToken} {
      allow create, update, read, write: if true;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
